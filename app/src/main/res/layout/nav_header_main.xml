<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/headerLinearLay">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user_loged"
            android:layout_marginTop="20dp"
            android:id="@+id/logged"/>
        <TextView
            android:id="@+id/nombre_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="20dp"
            android:layout_toRightOf="@id/logged"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@id/logged"
            android:paddingLeft="20dp"
            android:textSize="12dp"
            android:text="0 COMENTARIOS"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@id/logged"
            android:paddingLeft="20dp"
            android:textSize="12dp"
            android:text="0 VALORACIONES"
            android:drawableBottom="@color/gris"/>
    </RelativeLayout>
    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dreta_grey"
        android:id="@+id/enter"
        android:layout_marginRight="11dp"
        android:layout_marginTop="-50dp"
        android:layout_gravity="right"
        android:layout_marginEnd="11dp"/>

</LinearLayout>
